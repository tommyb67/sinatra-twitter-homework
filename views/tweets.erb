<h1>Sinatra and Twitter</h1>

<form action="/tweets/" method="get">
<input type="text" name="username">
<button>Submit</button>
</form>
<ul>
<% @my_tweets.each do |tweet| %>
  <li>
    <a href="https://twitter.com/username/status/"<%tweet[:id]%>><%= tweet[:text] %> </a>
    <img src="<%= tweet[:media][0][:media_url] unless tweet[:media].empty? %>">
  </li>
<% end %>
</ul>

